{
  "name": "mobile-template",
  "type": "module",
  "author": "WangRuiJin <1361572192@qq.com>",
  "repository": "git@gitee.com:jh_shot/mobile-template.git",
  "license": "MulanPSL2",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview --mode production",
    "gen:icons": "tsx scripts/genIcons.ts",
    "lint": "concurrently \"npm:lint:*\"",
    "lint:script": "eslint \"./src/**/*.{ts,vue}\" --fix",
    "lint:style": "stylelint \"./src/**/*.{css,vue}\" --fix",
    "commit": "git add . && git cz",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "npx simple-git-hooks"
  },
  "dependencies": {
    "@iconify/vue": "^4.1.1",
    "@vueuse/core": "^10.4.1",
    "axios": "^1.4.0",
    "dayjs": "^1.11.9",
    "lodash-unified": "^1.0.3",
    "pinia": "^2.1.6",
    "vant": "^4.6.6",
    "vue": "^3.3.4",
    "vue-router": "^4.2.4",
    "vue-types": "^5.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@iconify/tools": "^3.0.2",
    "@iconify/types": "^2.0.0",
    "@ttou/define-config": "^3.1.0",
    "@types/ejs": "^3.1.2",
    "@types/mockjs": "^1.0.7",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vitejs/plugin-legacy": "^4.1.1",
    "@vitejs/plugin-vue": "^4.3.3",
    "@vue/eslint-config-typescript": "^11.0.3",
    "autoprefixer": "^10.4.0",
    "commitizen": "^4.3.0",
    "concurrently": "^8.2.0",
    "cz-customizable": "^7.0.0",
    "ejs": "^3.1.9",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-vue": "^9.17.0",
    "globby": "^13.2.0",
    "lint-staged": "^14.0.1",
    "mockjs": "^1.1.0",
    "postcss": "^8.4.28",
    "postcss-html": "^1.5.0",
    "postcss-mobile-forever": "^4.0.0",
    "postcss-nested": "^6.0.1",
    "prettier": "^3.0.2",
    "rollup-plugin-visualizer": "^5.9.2",
    "simple-git-hooks": "^2.9.0",
    "stylelint": "^15.10.3",
    "stylelint-config-standard": "^34.0.0",
    "tsx": "^3.12.7",
    "typescript": "^5.1.3",
    "unplugin-imagemin": "^0.5.6",
    "unplugin-vue-components": "^0.25.2",
    "vite": "^4.4.9",
    "vite-plugin-compression2": "^0.10.4",
    "vite-plugin-eslint2": "^4.1.0",
    "vite-plugin-mock": "^2.9.8",
    "vite-plugin-stylelint": "^5.1.1"
  },
  "browserslist": [
    "Chrome >= 51",
    "iOS >= 10.0"
  ],
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.cjs"
    }
  },
  "lint-staged": {
    "*.{ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,vue}": [
      "stylelint --fix --allow-empty-input",
      "prettier --write"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx commitlint --edit $1"
  }
}
