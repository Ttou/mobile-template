{
  "name": "mobile-template",
  "type": "module",
  "author": "WangRuiJin <1361572192@qq.com>",
  "repository": "git@gitee.com:jh_shot/mobile-template.git",
  "license": "MulanPSL2",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview --mode production",
    "gen:icons": "tsx scripts/genIcons.ts",
    "lint": "concurrently \"npm:lint:*\"",
    "lint:script": "eslint \"./src/**/*.{ts,vue}\" --fix",
    "lint:style": "stylelint \"./src/**/*.{css,vue}\" --fix",
    "check": "vue-tsc --noEmit",
    "commit": "git add . && git cz",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "npx simple-git-hooks"
  },
  "dependencies": {
    "@iconify/vue": "^4.1.1",
    "@vueuse/core": "^10.6.1",
    "axios": "^1.6.2",
    "axios-mock-adapter": "^1.22.0",
    "dayjs": "^1.11.10",
    "lodash-unified": "^1.0.3",
    "pinia": "^2.1.7",
    "vant": "^4.8.0",
    "vue": "^3.3.8",
    "vue-router": "^4.2.5",
    "vue-types": "^5.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.2",
    "@commitlint/config-conventional": "^18.4.2",
    "@iconify/tools": "^3.0.6",
    "@iconify/types": "^2.0.0",
    "@ttou/define-config": "^3.2.0",
    "@ttou/vite-html": "^0.0.5",
    "@types/mockjs": "^1.0.10",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "@vitejs/plugin-legacy": "^5.0.0",
    "@vitejs/plugin-vue": "^4.5.0",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "autoprefixer": "^10.4.16",
    "commitizen": "^4.3.0",
    "concurrently": "^8.2.2",
    "cz-customizable": "^7.0.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-vue": "^9.18.1",
    "globby": "^14.0.0",
    "lint-staged": "^15.1.0",
    "mockjs": "^1.1.0",
    "postcss": "^8.4.31",
    "postcss-html": "^1.5.0",
    "postcss-mobile-forever": "^4.0.0",
    "postcss-nested": "^6.0.1",
    "prettier": "^3.1.0",
    "rollup-plugin-visualizer": "^5.9.2",
    "simple-git-hooks": "^2.9.0",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "tsx": "^4.1.3",
    "typescript": "^5.2.2",
    "typescript-plugin-css-modules": "^5.0.2",
    "unplugin-imagemin": "^0.5.13",
    "unplugin-vue-components": "^0.25.2",
    "vite": "^5.0.4",
    "vite-plugin-eslint2": "^4.3.1",
    "vite-plugin-stylelint": "^5.2.1",
    "vue-tsc": "^1.8.22"
  },
  "browserslist": [
    "Chrome >= 51",
    "iOS >= 10.0"
  ],
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.cjs"
    }
  },
  "lint-staged": {
    "*.{ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,vue}": [
      "stylelint --fix --allow-empty-input",
      "prettier --write"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx commitlint --edit $1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
